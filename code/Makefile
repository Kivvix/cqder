### Nom du projet  #####################################################
PROJET  = cqder

# Different directories
SRCDIR = src
INCDIR = inc
OBJDIR = obj
LIBDIR = lib
BINDIR = .

### Information général ################################################
# éditeur pour ouvrir les fichiers
EDITOR      = subl
# fichiers a ajouter dans l'archive en plus des sources
ARCHIVE    ?= README
# données d'entrée pour l'exécution du programme (cf `val` et `benchmark`)
INPUT_ARGS ?= 

# nombre de runs pour le benchmark
Nrun ?= 100

### Information structure projet #######################################
SRCEXT = cc
INCEXT = h
CC     = g++ -std=c++11
LD     = $(CC) -fPIC -shared

### Information de compilation  ########################################
DEBUG_MODE ?= N

CFLAGS = -Wall -Wextra -I$(INCDIR)
GLLIBS = -lm -Iinc

ifeq ($(DEBUG_MODE),Y)
	CFLAGS += -g -pg -DDEBUG_MODE
else
	CFLAGS += -O2
endif

SRC = $(wildcard $(SRCDIR)/*.$(SRCEXT))
OBJ = $(SRC:$(SRCDIR)/%.$(SRCEXT)=$(OBJDIR)/%.o)
INC = $(wildcard $(INCDIR)/*.$(INCEXT))

WIDTH_TERM = $(shell tput cols)
DATE = $(shell date +%Y-%m-%d--%H-%M)
echo = /bin/echo -e

### Règles de compilation ##############################################
all : $(LIBDIR)/lib$(PROJET).so
	@$(echo) " Library : lib$(PROJET).so"

# Build exec
$(LIBDIR)/lib$(PROJET).so : $(OBJ)
ifeq ($(DEBUG_MODE),Y)
	@$(echo) "\033[1mCompilation en mode debug \033[0m"
else
	@$(echo) "\033[1mCompilation en mode release \033[0m"
endif
	@$(echo) "\033[36m$(PROJET) \033[0m"
	@$(LD) $^ $(CFLAGS) $(GLLIBS) -o $@
	@$(echo) -n "\033[90mCompilation finie.\033[0m"

# Build object files from *.c
$(OBJDIR)/%.o : $(SRCDIR)/%.$(SRCEXT) $(INCDIR)/%.$(INCEXT)
	@$(echo) "\033[95m"$(notdir $@)"\033[0m"
	@$(CC) -o $@ -c $< $(CFLAGS)

### TEST ###############################################################
test.out : test/all_tests.h
	@$(echo) "\033[95m$@ \033[0m"
	@$(CC) -o $@ test/main.cc -Iinc/ -Llib/ -lcqder -lpthread -lgtest

test/all_tests.h : $(wildcard test/unit/*.inl)
	@$(echo) "\033[93m$@ \033[0m"
	@echo "#ifndef __ALL_TESTS_H_" >  $(header_test) 
	@echo "#define __ALL_TESTS_H_" >> $(header_test)
	@for file in test/unit/*.inl ; do echo "#include \"$${file##test/}\"" >> $(header_test); done
	@echo "#endif" >> $(header_test)

a.out : $(LIBDIR)/lib$(PROJET).so main.cc
	@$(echo) "\033[95m$@ \033[0m"
	@$(CC) main.cc -Iinc/ -Llib/ -lcqder

### .PHONY #############################################################
PHONY = clean mrproper nuke zip unzip debug val open café benchmark new old young version help branch git
.PHONY: $(PHONY)

# ~~ clean ~~ supprime fichiers de compilation
clean :
	@$(echo) "\033[41;97;1m ** Suppression des fichier objets et sauvegarde ** \033[0m"
	rm -f $(OBJDIR)/*.o *~ $(SRCDIR)/*~ $(INCDIR)/*~

# ~~ mrproper ~~ supprime lib et .tar.gz
mrproper : clean
	@$(echo) "\033[31;1mSuppression de la bibliothèque \033[0m"
	rm -f $(LIBDIR)/*.so
	@$(echo) "\033[31;1mSuppression de l'archive \033[0m"
	rm -f $(PROJET).tar.gz

# ~~ nuke ~~ supprime benchmark
nuke : mrproper
	@$(echo) "\033[91;1mSuppression de l'étude benchmark \033[0m"
	rm -f b.csv b.pdf
	@$(echo) "  ,-*\n (_)\n"

# ~~ zip ~~ crée une archive tar.gz
zip : mrproper
	@$(echo) "\033[44;97;1m Création de l'archive : $(PROJET).tar.gz \033[39;49;0m"
	@tar -zcvf $(PROJET).tar.gz $(SRCDIR)/*.$(SRCEXT) $(INCDIR)/*.$(INCEXT) Makefile $(ARCHIVE)
	@$(echo) "\033[2mPour untar : \n\t\$ tar xvzf $(PROJET).tar.gz\033[0m"

unzip : old
	@$(echo) "\033[44;97;1m Détaration de $(filter-out $@,$(MAKECMDGOALS)) \033[39;49;0m"
	@tar xvzf $(filter-out $@,$(MAKECMDGOALS))

# ~~ val ~~ lance valgrind avec comme input du programme $(INPUT_ARGS)
val : debug
	valgrind --leak-check=yes ./$(BINDIR)/$(PROJET) $(INPUT_ARGS)

# ~~ debug ~~ crée un executable en mode debug
debug : clean
	@$(echo) "\033[1mMode debug forcé\033[0m"
	$(MAKE) DEBUG_MODE=Y

# ~~ open ~~ ouvre les fichiers $(SRC) et $(INC)
open :
	$(EDITOR) $(SRC) $(INC) &

# ~~ café ~~ fait du café
café :
	@$(echo) " (\n  )\nc[]"

# TODO : passer à gnuplot pour une meilleure portabilité
# http://gnuplot.sourceforge.net/demo_canvas/boxplot.html
# /!\ boxplot dans gnuplot seulement  pour les dernières versions
# ~~ benchmark ~~ lance $(Nrun) fois le programme et analyse le temps d'exécution
benchmark : $(PROJET)
	@$(echo) "\n\033[42;97;1m Lancement de $(Nrun) run(s) \033[0m"
	@number=1 ; while [[ $$number -le $(Nrun) ]] ; do \
		$(echo) -ne"\033[1mCompilation en mode release \033[0m"
	@$(echo) "\033[36m" $$number $$(for i in $$(seq $$(($(WIDTH_TERM) - $${#number} - 7)) ); do $(echo) -n ' '; done) ; \
		bash -c "/usr/bin/time -f '%e,%U,%S' ./$(BINDIR)/$(PROJET) $(INPUT_ARGS) 2>&1 | tail -n 1" >> b.csv && $(echo) -e "[ \033[32mOK\033[0m ]" || $(echo) -e "[\033[91mFAIL\033[0m]" ; \
		((number = number + 1)) ; \
	done
	@Rscript -e "b_data  <- read.table('b.csv',sep=',',header=FALSE); png('b.png'); boxplot( list(b_data[[1]], b_data[[2]], b_data[[3]]) , col=c('pink','blue','green') ,names=c('real','user','sys') , main='Temps $(PROJET)' ); text( 1, 0.2 , mean( b_data[[1]] ) );text( 2, 0.2 , mean( b_data[[2]] ) ) ; text( 3, 0.2 , mean( b_data[[3]] ) );"

# ~~ new ~~ un nouvel exécutable propre
new : clean $(PROJET)
	@$(echo) " Nouvel executable : $(BINDIR)/$(PROJET)"

# ~~ old ~~ sauve les fichiers actuels avec des fichiers .old (pour remplacement par une archive)
old : $(addsuffix .old, $(SRC) $(INC))
	@$(echo) "I'm too old for this stuff"

# ~~ young ~~ remplace les fichiers actuels par les fichiers old
young : $(addsuffix .$(SRCEXT), $(wildcard $(SRCDIR)/*.old)) $(addsuffix .$(INCEXT), $(wildcard $(INCDIR)/*.old))
	@$(echo) "Foever young ! I want to be forever young"

# règles de préfixes pour les cibles old et young
$(SRCDIR)/%.$(SRCEXT).old :
	@mv $(SRCDIR)/$*.$(SRCEXT) $(SRCDIR)/$*.$(SRCEXT).old
$(SRCDIR)/%.old.$(SRCEXT) :
	@mv $(SRCDIR)/$*.old $(SRCDIR)/$*

$(INCDIR)/%.$(INCEXT).old :
	@mv $(INCDIR)/$*.$(INCEXT) $(INCDIR)/$*.$(INCEXT).old
$(INCDIR)/%.old.$(INCEXT) :
	@mv $(INCDIR)/$*.old $(INCDIR)/$*

# ~~ summer ~~ supprimer les fichier .old
summer :
	@for i in `seq 219 -1 214`; do $(echo) -n "\033[48;5;$${i}m " ; done ; $(echo) -n "\033[48;5;214m  \033[1mSupression des vieux  "; for i in `seq 214 1 219` ; do $(echo) -n "\033[48;5;$${i}m \033[0m" ; done ; $(echo) ""
	rm $(SRCDIR)/*.old $(INCDIR)/*.old

# ~~ licence ~~ affiche la licence du fichier Makefile
licence :
	@$(echo) "\033[1mLicence du fichier Makefile\033[0m\n"
	@wget -O wget -q -O - http://sam.zoy.org/lprab/COPYING | cat

# ~~ branch ~~ change l'indication de la branche de git avec le contenu de $(MAKECMDGOALS)
BRANCH = master
branch :
	@B1="BRANCH = $(BRANCH)" ; B2="BRANCH = $(filter-out $@,$(MAKECMDGOALS))" ; \
	sed -i "s/$${B1}.*/$${B2}/" Makefile
	#@git checkout $(BRANCH)

# ~~ git ~~ crée un commit et push le commit, le nom du commit est dans $(MAKECMDGOALS)
git :
	@git checkout -b $(BRANCH)
	@git commit -a -m "$(filter-out $@,$(MAKECMDGOALS))"
	@git push origin master

# ~~ version ~~ crée une nouvelle version du projet et incrémente le compteur de version, pour du versionning à la mano
VERSION = 1
version :
	@mkdir ../$(PROJET)_v$(VERSION)
	@cp -r * ../$(PROJET)_v$(VERSION)/
	@V1="VERSION = $(VERSION)" ; V2="VERSION = $$(($(VERSION) + 1))" ; \
	sed -i "s/$${V1}.*/$${V2}/" Makefile

# ~~ : ~~ gestion des noms non reconnu
#%:
#	@[ -z $(findstring $(word 1,$(MAKECMDGOALS)),$(PHONY)) ] && $(echo) -e "No target \033[31;1m$(word 1,$(MAKECMDGOALS))\033[0m found." >&2 || :

# ~~ help ~~ affiche l'aide
help :
	@Pro="$(PROJET)"; \
	$(echo) " ═══ Projet $$Pro ═$$(for i in `seq $$(($(WIDTH_TERM) - $${#Pro} - 15))`; do $(echo) -n '═'; done)\n option du Makefile :\n	- benchmark : execute N fois le programme, sauve les temps d'exécution et crée un graphe\n	- café      : fait le café\n	- benchmark : lance une mini-étude de benchmark\n	- clean     : nettoie les fichiers objets\n	- debug     : compile le projet en mode débug quelque soit la valeur de la variable DEBUG_MODE\n	- git <m>   : crée un commit ayant pour message <m> et push le résultat sur la branche master\n	- help      : c'est ce que tu viens de faire abruiti\n	- licence   : affiche la licence du Makefile /!\\ cela n'indique en rien la licence du projet $(PROJET)\n	- mrpropre  : nettoie les fichiers objets l'exécutable\n	- new       : recréer un exécutable (clean + $(PROJET))\n	- nuke      : nettoie tout\n	- zip       : crée une archive .tar.gz du projet\n	- old       : remplace les fichiers sources actuels par des fichiers de sauvegarde .old\n	- open      : ouvre tous les fichiers avec $(EDITOR) (variable EDITOR)	- summer    : supprime les fichier old\n	- unzip <f> : dézip le fichier <f> et remplace les fichiers sources actuels par des fichiers .old\n	- val       : execute valgrind avec les options de la variable INPUT_ARGS\n	- version   : sauve une version dans un autre dossier pour effectuer un versionning\n	- young     : relokace les fichiers .old par leur équivalent sans .old\n	- zip       : crée une archive du projet en y ajoutant les fichiers de la variable README\n"

